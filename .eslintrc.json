{
  "extends": "./node_modules/gts/",
  "rules": {
    "prettier/prettier": ["error", {
      "endOfLine": "auto"
    }],
    "node/no-extraneous-import": ["error", {
      "allowModules": ["vitest"]
    }]
  },
  "ignorePatterns": [
    "packages/*/dist",
    "packages/*/build",
    "apps/*/app/ui",
    "apps/*/app/public/sw.js",
    "apps/*/server/public"
  ]
}
